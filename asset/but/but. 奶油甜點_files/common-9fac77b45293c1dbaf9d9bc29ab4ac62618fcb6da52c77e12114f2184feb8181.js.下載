$(function(){$(window).on("load",function(){$("#preloadWrap").fadeOut(600)}),$(window).on("resize",function(){$(this).width()>1024?window.device="desktop":window.device="mobile"}).trigger("resize");$(".subMenuList li").mouseenter(function(){$(this).find(".thirdMenuList").stop(!0).slideDown(500),$(this).siblings().find(".thirdMenuList").slideUp(500)}),$(".store-select").niceSelect(),$("#tastedate, #marrydate").datepicker({format:"yyyy/mm/dd",language:"zh-TW",autoclose:!0,todayHighlight:!0,orientation:"top left"}),$(".reservationBtn").on("click",function(){$(".reservation-fancyWrap").fadeIn(500),$("#reservation").fadeIn(500).addClass("is-show")}),$(".storeBtn").on("click",function(){$("#reservation").hide().removeClass("is-show"),$("#store").fadeIn(500).addClass("is-show")}),$(".tasteBtn").on("click",function(){$("#reservation").hide().removeClass("is-show"),$("#taste").fadeIn(500).addClass("is-show")}),$(".sendBtn").on("click",function(){$("#store, #taste").hide().removeClass("is-show"),$("#finish").fadeIn(500)}),$(".reservationCloseBlock, .reservation-fancyWrap .close").on("click",function(){$(".reservation-fancyWrap").fadeOut(500),$("#reservation, #store, #taste, #finish").hide().removeClass("is-show")}),Vue.component("cart-item",{props:["price"],data:function(){return{num:1}},created:function(){this.$parent.$emit("totalInit",this.price)},methods:{add:function(){this.num+=1,this.$parent.$emit("totalAdd",this.price)},minor:function(){this.num>1&&(this.$parent.$emit("totalMinor",this.price),this.num-=1)},del:function(){this.$parent.$emit("totalDel",this.sum),$(this.$el).animate({left:"-60px",opacity:0},500,function(){$(this).slideUp(500,function(){$(this).remove()})})}},computed:{sum:function(){return this.num*this.price}}}),$(".hamburger, .mtw-close").on("click",function(){$(".mobile-topmenuWrap").toggleClass("is-open")}),$(".mobile-topmenuList > li, .mobile-subMenuList > li, .mobile-thirdMenuList > li").on("touchstart",function(){$(".en",this).css("display","none"),$(".ch",this).css("display","inline-block")})});